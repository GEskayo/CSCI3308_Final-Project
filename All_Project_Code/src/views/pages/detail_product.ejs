<%- include ('../partials/head') %>
<%- include ('../partials/menu', { pageType: 'detail_product' }) %>

<main>
    <div class="container mt-5">
        <% if (results) { %>
            <div class="row">
                <!-- Column for Image -->
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <img src="<%= results.itemimage %>" class="card-img-top img-fluid" alt="Product Image" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="mt-3">
                        <a href="https://steamcommunity.com/market/listings/730/<%= results.markethashname%>" target="_blank" class="btn btn-primary btn-block">View on Steam Market</a>
                    </div>
                    <form action="/bookmark/<%= results.id %>" method="POST">
                        <button type="submit"
                            class="btn btn-primary light-grey-text">Bookmark</button>
                    </form>
                </div>

                <!-- Column for Product Details -->
                <div class="col-lg-8 col-md-6">
                    <div class="card">
                        <div class="card-body" style="background-color:rgb(38,38,38)">
                            <h1 class="card-title" style="color:lightgrey"><%= results.marketname %></h1>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item item-description-rows">Latest Price: $<%= results.pricelatest %></li>
                            <li class="list-group-item item-description-rows">Latest Sell Price: $<%= results.pricelatestsell %></li>
                            <li class="list-group-item item-description-rows">Price Updated At: <%= results.priceupdatedat %></li>
                            <li class="list-group-item item-description-rows">Real Price: $<%= results.pricereal %></li>
                            <li class="list-group-item item-description-rows">Real Price Created At: <%= results.pricerealcreatedat %></li>
                            <li class="list-group-item item-description-rows">Win/Loss Percentage: <%= results.winlosspercentage %>%</li>
                            <li class="list-group-item item-description-rows">Median Price: $<%= results.pricemedian %></li>
                            <li class="list-group-item item-description-rows">Average Price: $<%= results.priceavg %></li>
                            <li class="list-group-item item-description-rows">Minimum Price: $<%= results.pricemin %></li>
                            <li class="list-group-item item-description-rows">Maximum Price: $<%= results.pricemax %></li>
                            <li class="list-group-item item-description-rows">Safe Price: $<%= results.pricesafe %></li>
                            <li class="list-group-item item-description-rows">Wear: <%= results.wear %></li>
                            <li class="list-group-item item-description-rows">Item Group: <%= results.itemgroup %></li>
                            <li class="list-group-item item-description-rows">Item Type: <%= results.itemtype %></li>
                            <li class="list-group-item item-description-rows">Item Name: <%= results.itemname %></li>
                            <li class="list-group-item item-description-rows">Rarity: <%= results.rarity %></li>
                            <li class="list-group-item item-description-rows">Quality: <%= results.quality %></li>
                            <li class="list-group-item item-description-rows">Last Updated: <%= results.updatedat %></li>
                        </ul>
                    </div>
                </div>
            </div>
        <% } else if (error) { %>
            <p class="alert alert-danger"><%= error %></p>
        <% } %>        
    </div>
</main>

<%- include ('../partials/footer') %>
